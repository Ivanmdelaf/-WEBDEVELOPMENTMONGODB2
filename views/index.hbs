<div class="container">
    <div class="panel card-primary mb-4">
        <div class="card-header">
            <h3 class="card-title">
                Upload an Image
            </h3>
        </div>
        <form action="/images" method="post" enctype="multipart/form-data">
            <div class="card-body form-horizontal">
                <label for="file" class="col-sm-2 control-label">Browse:</label>
                <div class="col-md-10 pb-2">
                    <input type="file" name="file" id="file" class="form-control">
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="title" class="col-md-2 control-label">Title:</label>
                <div class="col-md-10">
                    <input type="text" name="title" id="title" class="form-control">
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="description" class="col-md-2 control-label">Description:</label>
                <div class="col-md-10">
                    <textarea name="description" id="description" rows="2" class="form-control"></textarea>
                </div>
            </div>
            <div class="from-group col-md-12 mb-2 d-block">
                <div class="col-md-12 text-right">
                    <button type="submit" id="login-btn" class="btn btn-success d-block"><i class="fa fa-cloud-upload"></i> Upload Image</button>
                </div>
            </div>
        </form>
    </div>
    <div class="card card-default mb-2">
        <div class="card-header">
            <h3 class="card-title">
                Newest Images
            </h3>
        </div>
        <div class="card-body ">
            {{#each images}}
                <div class="col-md-4 text-center" style="padding-botton:1em;">
                    <a href="/images/{{uniqueId}}">
                        <img src="/public/upload/{{filename}}" alt="{{title}}" style="width: 175px; height: 175px;" class="img-thumbnail">
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>